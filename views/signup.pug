extends layout

block content 

  legend= title
  form(method='post').needs-validation
    .mb-3
      label.form-label(for='email') Email address
      input.form-control(type='email' id='email' name='email' aria-describedby='email')
      #email.form-text We'll never share your email with anyone else.
    .mb-3
      label.form-label(for='password') Password
      input.form-control(type='password' id='password' name='password')
    .mb-3.form-check
      input.form-check-input(type='checkbox' id='exampleCheck1')
      label.form-check-label(for='exampleCheck1') Check me out
    .d-inline-flex.gap-3
      button.btn.btn-primary(type='submit') Submit
      a.btn.btn-secondary(href='/signin') Sign In